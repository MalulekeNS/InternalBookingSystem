@page
@model InternalBookingSystem.Pages.Bookings.IndexModel
<h2>Bookings</h2>

<a class="btn btn-primary mb-3" href="/Bookings/Create">Add Booking</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Resource</th>
            <th>Start</th>
            <th>End</th>
            <th>Booked By</th>
            <th>Purpose</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Bookings)
        {
            <tr>
                <td>@b.Resource.Name</td>
                <td>@b.StartTime.ToString("g")</td>
                <td>@b.EndTime.ToString("g")</td>
                <td>@b.BookedBy</td>
                <td>@b.Purpose</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Bookings/Details?id=@b.Id">Details</a>
                    <a class="btn btn-warning btn-sm" href="/Bookings/Edit?id=@b.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Bookings/Delete?id=@b.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
