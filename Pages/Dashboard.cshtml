@page
@model DashboardModel

<h2 class="mb-4">Dashboard Overview</h2>

<div class="row">

    <div class="col-md-3">
        <div class="card card-custom shadow p-3 mb-3">
            <h5>Total Resources</h5>
            <h2>@Model.TotalResources</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card card-custom shadow p-3 mb-3">
            <h5>Total Bookings</h5>
            <h2>@Model.TotalBookings</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card card-custom shadow p-3 mb-3">
            <h5>Bookings Today</h5>
            <h2>@Model.BookingsToday</h2>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card card-custom shadow p-3 mb-3">
            <h5>Bookings This Week</h5>
            <h2>@Model.BookingsThisWeek</h2>
        </div>
    </div>

</div>

@if (Model.NextBooking != null)
{
    <div class="card shadow p-3 mt-4">
        <h4>Next Upcoming Booking</h4>
        <p><strong>Resource:</strong> @Model.NextBooking.Resource.Name</p>
        <p><strong>When:</strong> @Model.NextBooking.StartTime.ToString("g")</p>
        <p><strong>Booked By:</strong> @Model.NextBooking.BookedBy</p>
    </div>
}

<h4 class="mt-5">Upcoming Bookings</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Resource</th>
            <th>Start</th>
            <th>End</th>
            <th>Booked By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.UpcomingBookings)
        {
            <tr>
                <td>@b.Resource.Name</td>
                <td>@b.StartTime.ToString("g")</td>
                <td>@b.EndTime.ToString("g")</td>
                <td>@b.BookedBy</td>
            </tr>
        }
    </tbody>
</table>
